<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blackjack.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blackjack.Web.styles.css" asp-append-version="true" />

    <style>
        body {
            background: #267342 radial-gradient(circle, #267342 60%, #19592b 100%);
            font-family: 'Segoe UI', sans-serif;
        }

        .blackjack-table {
            min-width: 340px;
            max-width: 600px;
            margin: 2em auto;
            background: linear-gradient(135deg, #23713c 70%, #15592e 100%);
            border-radius: 2.2em;
            box-shadow: 0 0 2.5em #153e22bb;
            padding: 2.8em 2.3em 2em 2.3em;
            color: #fffbe9;
        }

            .section-title, .cards-row, .controls-row, .result-box, .blackjack-table h1 {
                margin-bottom: 1.2em !important;
            }

        .cards-row {
            display: flex;
            flex-direction: row;
            gap: 1.6em; /* lagom avstånd mellan korten */
            margin-bottom: 2em;
            margin-top: 0.8em;
            flex-wrap: wrap;
            justify-content: flex-start; /* eller center */
            align-items: flex-end;
        }

        .card {
            background: #fff;
            width: 68px; /* fast bredd */
            height: 100px; /* fast höjd */
            box-shadow: 0 4px 16px #0002;
            font-size: 2em; /* lagom rank/suit-storlek */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin: 0;
            position: relative;
            padding: 0.18em 0;
            transition: transform 0.1s;
        }

            .card .corner-rank {
                font-size: 1.2em;
            }

            .card .suit {
                font-size: 1.5em;
                display: block;
				margin-bottom: 0.1em;
            }

            .card:last-child {
                margin-right: 0;
            }

            .card.red {
                color: #d0303a;
            }

            .card.black {
                color: #232323;
            }

        .corner-rank {
            font-size: 1em;
			margin-top: 0.1em;
        }

        .section-title {
            font-size: 1.5em;
            margin-top: 1.7em;
            margin-bottom: 0.5em;
            font-weight: 600;
        }

        .controls-row {
            display: flex;
            gap: 2.7em;
            margin-top: 2.3em;
            margin-bottom: 2em;
        }

        .btn {
            padding: 0.7em 2em;
            font-size: 1.25em;
            border-radius: 0.7em;
            border: none;
            background: #22c655;
            color: #fff;
            font-weight: 600;
            box-shadow: 0 1px 6px #1a1a1a22;
            transition: background 0.16s;
        }

            .btn:hover {
                background: #1b8c42;
            }

        .bet-input {
            width: 80px;
            font-size: 1em;
            padding: 0.18em 0.4em;
            border-radius: 5px;
            border: 1px solid #bdbdbd;
            margin-right: 0.8em;
        }

        .result-box {
            background: #fff9;
            color: #18401b;
            padding: 1.3em;
            border-radius: 12px;
            margin-top: 1.5em;
            font-size: 1.12em;
            box-shadow: 0 1px 6px #1a1a1a24;
        }

            .result-box h4 {
                color: #14532d;
                font-size: 1.2em;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Blackjack.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Blackjack.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
